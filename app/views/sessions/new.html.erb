<% provide(:title, "Log in") %>
<h1 style="text-align: center">Log in</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: login_path) do |f| %>
        <input class="form-control" type="email" name="session[email]" id="session_email"><br>
        <input class="form-control" type="password" name="session[password]" id="session_password"><br>
        <input type="submit" name="commit" value="Log in" class="btn btn-primary" data-disable-with="Log in" style="width: 100%">
    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>

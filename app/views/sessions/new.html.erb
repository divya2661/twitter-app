<% provide(:title, "Log in") %>
<h1 style="text-align: center">Log in</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: login_path) do |f| %>
        <input class="form-control" name="user[email]" placeholder="Email"/><br>
        <input class="form-control" name="user[password]" type="password" placeholder="Password"/><br>
        <input style="width: 100%" type="submit" name="commit" value="Log In" class="btn btn-primary">
    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>

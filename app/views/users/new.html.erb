<% provide(:title, 'Sign up') %>
<h1 style="text-align: center">Sign up</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <input class="form-control" name="user[name]" placeholder="Name"/><br>
        <input class="form-control" name="user[email]" placeholder="Email"/><br>
        <input class="form-control" name="user[password]" type="password" placeholder="Password"/><br>
        <input style="width: 100%" type="submit" name="commit" value="Create my account" class="btn btn-primary">
      <% end %>
      <p>Already have an account? <%= link_to 'Log in!', login_path %></p>
  </div>
</div>
